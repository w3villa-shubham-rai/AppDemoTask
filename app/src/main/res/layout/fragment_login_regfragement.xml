<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomsheetbg"
    tools:context=".Loginfragement">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="145dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/emaillogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signinbtn"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:background="@drawable/buttonbackground"
        android:text="SignIn"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.784" />

    <EditText
        android:id="@+id/passwordlogin"
        android:layout_width="302dp"
        android:layout_height="55dp"
        android:background="@drawable/btnborede"
        android:ems="10"
        android:hint="password"
        android:inputType="text"
        android:textColor="#050505"
        android:padding="20dp"
        android:textColorHint="#090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.552" />

    <EditText
        android:id="@+id/emaillogin"
        android:layout_width="299dp"
        android:layout_height="55dp"
        android:background="@drawable/btnborede"
        android:ems="10"
        android:hint="email id"
        android:textColor="#0B0A0A"
        android:inputType="text"
        android:padding="20dp"
        android:textColorHint="#0C0C0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308" />

    <TextView
        android:id="@+id/Register"
        android:layout_width="142dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:text="Register user?"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/signinbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.828"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordlogin" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:text="or sign in with"
        android:textColor="#100F0F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinbtn"
        app:layout_constraintVertical_bias="0.093" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.058">


        <ImageView
            android:id="@+id/logingoogle"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_weight="1"
            android:src="@drawable/google" />

        <ImageView
            android:id="@+id/facebookbtn"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/facebook_logo_2019"
            tools:layout_editor_absoluteX="290dp"
            tools:layout_editor_absoluteY="654dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="9dp"
            android:layout_height="40dp"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:src="@drawable/twitter" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>